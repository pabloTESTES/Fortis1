<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/blue_dark"
    tools:context=".ui.treino.TreinoActivity">

    <ImageButton
        android:id="@+id/ibVoltar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/baseline_exit_to_app_24"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ibConfiguracao"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/baseline_reorder_24"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivFortisLogo"
        android:layout_width="160dp"
        android:layout_height="70dp"
        android:background="@drawable/logo_fortis"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/ibVoltar"
        app:layout_constraintEnd_toStartOf="@id/ibConfiguracao" />

    <androidx.cardview.widget.CardView
        android:id="@+id/mainContentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="@color/branco_amarelado"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivFortisLogo">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/llGrupoTreino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/tvContagemExercicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="16sp"
                    tools:text="Exercício 1 de 5" />
                <TextView
                    android:id="@+id/tvNomeExercicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue_dark"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="24dp"
                    tools:text="Supino Reto" />
                <TextView
                    android:id="@+id/tvContagemSeries"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue_dark"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    tools:text="Série 1 de 4" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="32dp">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilCarga"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Carga (KG)"
                        android:layout_marginEnd="8dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etCarga"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilRepeticoes"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Repetições"
                        android:layout_marginStart="8dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etRepeticoes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnConcluirSerie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Concluir Série"
                    android:background="@drawable/button_dark_rounded"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/Ford_Blue"
                    android:layout_marginBottom="16dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btnProximoExercicio"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Pular Exercício"
                        android:textColor="@color/secondary_text_color"
                        android:layout_marginEnd="8dp"/>
                    <Button
                        android:id="@+id/btnFinalizarTreino"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Finalizar Treino"
                        android:textColor="@color/accent_color"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llGrupoDescanso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:visibility="gone"
                tools:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DESCANSO"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvTimerDescanso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Ford_Blue"
                    android:textSize="60sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    tools:text="01:29"
                    tools:visibility="visible"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnIniciarDescanso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cronometrar Descanso"
                    android:background="@drawable/button_dark_rounded"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/Ford_Blue"
                    android:paddingHorizontal="32dp"
                    android:visibility="visible"/>
                <Button
                    android:id="@+id/btnPularDescanso"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pular Descanso"
                    android:textColor="@color/secondary_text_color"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:id="@+id/progressBarTreino"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivFortisLogo" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/Ford_Blue"
        app:itemIconTint="@color/color_item_bottom_nav"
        app:itemTextColor="@color/color_item_bottom_nav"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/app_menu_file" />

</androidx.constraintlayout.widget.ConstraintLayout>