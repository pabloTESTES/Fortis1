<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ui.perfil.PerfilActivity">

    <ImageButton
        android:id="@+id/ibVoltar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/baseline_exit_to_app_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivFortisLogo"
        android:layout_width="160dp"
        android:layout_height="70dp"
        android:background="@drawable/logo_fortis"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/ibVoltar"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="66dp"/> <androidx.cardview.widget.CardView
    android:id="@+id/mainContentContainer"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/container_background_color"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/ivFortisLogo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvTituloPagina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MEU PERFIL"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/tvNomeHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/Ford_Blue"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"
                tools:text="Carregando..." />

            <TextView
                style="@style/SettingsSectionTitle"
                android:text="Dados Pessoais" />

            <TextView
                android:id="@+id/tvNomeDados"
                style="@style/FaqItem"
                tools:text="Nome: Carregando..." />
            <View style="@style/Divider" />
            <TextView
                android:id="@+id/tvCpf"
                style="@style/FaqItem"
                tools:text="CPF: Carregando..." />
            <View style="@style/Divider" />
            <TextView
                android:id="@+id/tvNascimento"
                style="@style/FaqItem"
                tools:text="Nascimento: Carregando..." />
            <View style="@style/Divider" />
            <TextView
                android:id="@+id/tvTelefone"
                style="@style/FaqItem"
                tools:text="Telefone: Carregando..." />

            <TextView
                style="@style/SettingsSectionTitle"
                android:layout_marginTop="32dp"
                android:text="Meu Plano" />

            <TextView
                android:id="@+id/tvPlanoTipo"
                style="@style/FaqItem"
                tools:text="Tipo: Carregando..." />
            <View style="@style/Divider" />
            <TextView
                android:id="@+id/tvPlanoStatus"
                style="@style/FaqItem"
                tools:text="Status: Carregando..." />
            <View style="@style/Divider" />
            <TextView
                android:id="@+id/tvPlanoVencimento"
                style="@style/FaqItem"
                tools:text="Vencimento: Carregando..." />

        </LinearLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>

    <ProgressBar
        android:id="@+id/progressBarPerfil"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivFortisLogo" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/Ford_Blue"
        app:itemIconTint="@color/color_item_bottom_nav"
        app:itemTextColor="@color/color_item_bottom_nav"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/app_menu_file" />

</androidx.constraintlayout.widget.ConstraintLayout>